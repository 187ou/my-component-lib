{
  "compilerOptions": {
    "target": "ES2020", // 编译目标
    "useDefineForClassFields": true,
    "module": "ESNext", // 模块系统
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler", // 打包器模块解析
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // 允许生成文件（与 vue-tsc 配合）
    "jsx": "preserve",
    "strict": true, // 严格模式
    "noUnusedLocals": true, // 未使用变量报错
    "noUnusedParameters": true, // 未使用参数报错
    "noFallthroughCasesInSwitch": true,
    "declaration": true, // 生成 .d.ts 类型声明
    "declarationDir": "dist", // 类型声明输出目录
    "declarationMap": true, // 生成类型映射文件（便于调试）
    "emitDeclarationOnly": false, // 同时生成 JS 和类型声明
    "baseUrl": ".",  // 添加 baseUrl 配置
    "paths": {       // 添加 paths 配置
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
